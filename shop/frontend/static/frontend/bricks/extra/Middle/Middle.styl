.{$px}Middle
    padding-bottom: 40px
    margin-top: 20px
    margin-bottom: auto
    width: 100%
    clearfix()
    &_top
        margin-top: 0

    &-column
        float: left
        width: 250px
        margin-right: -100%
        +m('tablet')
            float: none
            margin-right: 0
            width: auto
            margin-top: 50px


    &-top
        background-color: clr-lt;
        margin-bottom: 91px
        padding-top: 50px
        padding-bottom: 50px
    &-title
        color: #878a91;
        font-size: font-md;
        font-weight: 500;
        line-height: 1.2em
        text-transform: uppercase;
        letter-spacing: 3.3px;
        padding-left: 25px
        border-left: 3px solid clr-primary
    &-header
        display: flex
        justify-content: space-between
        +e(-breadcrumbs)
            margin-left: 20px
        +e(-title)
            margin-bottom: 0
        +m('tablet')
            flex-wrap: wrap
            display: block
            +e(-breadcrumbs)
                margin-top: 20px
                margin-left: 28px
    &-section
        position: relative
        & + &
            &:after
                content: ''
                display: block
                left: 0
                top: 0
                right: 0
                height: 8px
                position: absolute
                background: img() 0 0 no-repeat
    
    
    &-footer
        margin-top: 19px

    &-main
        width: 100%;
        padding-left: 270px;
        position: relative
        float: right
        +m('tablet')
            float: none
            padding-left: 0


    &-article
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        background-color: #f4f4f4;

