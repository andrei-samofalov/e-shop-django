.{$px}ProductCard
    display: flex
    margin-bottom: 50px
    +m('tablet')
        display: block
    &-look
        width: 51%
        position: relative
        +m('tablet')
            width: 100%
            margin-bottom: 30px
    &-desc
        width: 49%
        padding: 0
        padding-left: 46px
        +m('tablet')
            width: 100%
            padding-left: 0
    &-sale
        position: absolute
        left: 20px
        top: -14px
        color: clr-white;
        font-size: font-sm;
        font-weight: 400;
        line-height: 1.2em
        letter-spacing: 0.65px;
        width: 58px;
        height: 58px;
        padding: 5px
        background-color: clr-success;
        display: flex
        align-items: center
        justify-content: center
        border-radius: 100px
        

    &-picts
        position: absolute
        top: 0
        left: -92px
        display: block
        width: 73px
        +m(700px)
            width: 100%
            position: relative
            left: 0
            margin-top: 10px
            top: 0
            display: flex
            flex-wrap: wrap
    &-cart
        display: flex
        padding-top: 37px
        background: img('bg', 'lineHeaderSection.png') left top repeat-x
        margin-top: 38px
        +m('phone')
            display: block
        &Element
            width: auto
            & + &
                margin-left: 20px
                +m('phone')
                    margin-left: 0
                    margin-top: 20px
            &_amount
                margin-right: auto
            &_btn
                text-align: right
                +m('phone')
                    text-align: center
            +m('phone')
                +b(btn)
                    display: flex
            &_buy
                text-align: center
                width: auto
                +b(btn)
                    display: flex
                    min-width: 210px
                    margin-top: 10px
                    
            
    
    &-pict
        width: 73px
        height: 73px
        background: #fff
        display: flex
        align-items: center
        padding: 4px
        justify-content: center
        border: 1px solid #e0e0e0;
        img
            max-width: 100%
            max-height: 100%
        &_ACTIVE
            border-color #5d6064
        + {e(-pict)}
            margin-top: 9px
            +m(700px)
                margin-top: 0
        +m(700px)
            margin-bottom: 10px
            margin-right: 10px

    &-photo
        width: 100%
        display: flex
        justify-content: center
        align-items: center
        min-height: 600px
        height: 100%
        border: 1px solid #e0e0e0;
        padding: 30px
        img
            max-width: 100%
            max-height: 100%
        +m('tablet')
            min-height: auto
            height: 300px

    &-header
        margin-top: 4px
        padding-bottom: 40px
        background: img('bg', 'lineHeaderSection.png') left bottom repeat-x
    &-info
        display: flex
        align-items: center
        margin-top: 25px
        +m('phone')
            flex-wrap: wrap
            > *
                margin-bottom: 1rem
        +e(-rating)
            margin-left: 1.5rem
    &-title
        display: block
        line-height: 1.2em
        font-size: 32px;
        font-weight: 600;
        margin-bottom: 17px

    &-footer
        margin-top: 30px
        padding-top: 37px
        background: img('bg', 'lineHeaderSection.png') left top repeat-x
        display: flex
        align-items: center
        +m('phone')
            display: block
            text-align: center
            +b(btn)
                width: 100%
    &-payment
        display: flex
        align-items: center
        margin-left: 2.2rem
        +m('phone')
            justify-content: center
            margin-left: 0
            margin-top: 2.5rem
    &-card
        & + &
            margin-left: 1.5rem
            +m('phone')
                margin-left: 3rem
    &-cost
        display: flex
        align-items: flex-end
        margin-right: auto
    &-compare
        margin-left: 20px
        +b(btn)
            width: 56px
            height: 56px
            background-color: #ebebeb;
            justify-content: center
            align-items: center
            border: 1px solid transparent
            transition: all 300ms
            padding: 5px
            border-radius: 0
            &-icon
                margin-right: 0 !important
            +m('desktop')
                &:hover
                    background-color: lighten(clr-primary, 85%)
                    border-color: clr-primary
                    transition: all 300ms
    &-price
        color: clr-primary;
        font-size: font-lg;
        font-weight: 600;
        letter-spacing: 1px
        display: inline-block
        line-height: 1em
        &Old
            line-height: 1em
            font-size: 23px;
            color: #999999;
            font-weight: 400;
            text-decoration: line-through;
            display: inline-block
            padding-bottom: 3px
            margin-left: 10px
    &-text
        visibility: visible
        margin-top: 26px
        ul
            margin-left: 0
            padding-left: 0
            li
                padding-left: 25px
                + li
                    margin-top: 5px
                &:after
                    display: block
                    background-color: #7d7d7d;
                    width: 5px
                    height: 5px
                    left: 3px
                    border-radius: 0;
            +m('tablet')
                font-size: font-sm;
                li
                    padding-left: 30px
                    + li
                        margin-top: 15px
                    &:after
                        left: 2px
                        top: 5px
    &-timer
        color: #a8aab4;
        font-size: font-nr;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.8px;
        line-height: 1.2em
        margin-top: 25px
    &-social
        display: flex
        margin-top: 32px
        +m('tablet')
            flex-wrap: wrap
        &Title
            visibility: visible
            background-color: clr-lt;
            color: #8e93a0;
            font-size: font-nrm;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2.1px;
            min-height: 37px
            padding: 3px 15px
            display: flex
            justify-content: center
            align-items: center
            margin-right: 10px
            min-width: 210px
            +m('tablet')
                margin-bottom: 10px
    &-menu
        margin-top: 0
        justify-content: flex-start
        width: auto
        +b(menu-link)
            background-color: clr-lt;
            display: flex !important
            justify-content: center
            align-items: center
        +b(menu-item)
            height: 37px
            width: 37px
            + {b(menu-item)}
                margin-left: 10px
    
            a
                img
                    transform: scale(1)
            +m('desktop')
                a:hover
                    img
                        transform: scale(1.3)
    &-tags
        font-size: font-nrm;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 2.1px;
        color: clr-muted;
        a
            display: inline-block
            color: #a8aab4;
            +m('desktop')
                &:hover
                    color: clr-muted



