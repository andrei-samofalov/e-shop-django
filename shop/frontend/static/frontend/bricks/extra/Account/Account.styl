.{$px}Account
    visibility: visible;
    &-group
        display: flex
        +m('phone')
            display: block
        & + &
            margin-top: 40px
    &-column
        &_full
            width: 100%
        & + &
            margin-left: 20px
            +m('phone')
                margin-left: 0
                margin-top: 20px
    &-avatar
        max-width: 200px
        max-height: 200px
        padding: 20px
        border: 1px solid #e0e0e0
        +m('phone')
            max-width: none
            text-align: center
            margin-left: auto
            margin-right: auto
        img
            max-width: 100%
            max-height: 100%
    &-name
        font-size: font-lgm
        font-weight: 400
        color: text-main
        line-height: 1.2em
        + {e(-editLink)}
            display: inline-block
    &-editLink
        display: block
        margin-top: 10px
        &_view
            color: text-main
            text-align: right
            +m(1200px)
                text-align: center
